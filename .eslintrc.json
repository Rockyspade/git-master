{
  "extends": [
    "magic",
    "magic/react"
  ],
  "globals": {
    "$": true,
    "location": true,
    "chrome": true,
    "TEMPLATE": true,
    "safari": true,
    "Components": true
  },
  "rules": {
    "no-bitwise": 0,
    "import/no-cycle": 0,
    "prefer-arrow-callback": "off",
    "no-useless-concat": "off",
    "react/jsx-wrap-multilines": [
      "error",
      {
        "prop": false
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/*.tsx"
      ],
      "extends": [
        "magic/typescript"
      ],
      "rules": {
      }
    }
  ]
}
